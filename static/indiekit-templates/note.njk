---
date: {{ published }}

location: {{ location }}
tags:
{% for tag in category %}
    - {{ tag }}
{% endfor %}

links:
{% if mentionOf %}
    - types: [mention_of]
      link: {{ mentionOf }}
{% endif %}
{% if inReplyTo %}
    - types: [in_reply_to]
      link: {{ inReplyTo }}
{% endif %}
{% if bookmarkOf %}
    - types: [bookmark_of]
      link: {{ bookmarkOf }}
{% endif %}
{% if repostOf %}
    - types: [repost_of]
      link: {{ repostOf }}
{% endif %}
{% if likeOf %}
    - types: [like_of]
      link: {{ likeOf }}
{% endif %}
syndication_links:
{% for link in syndicateTo %}
    - {{ link }}
{% endfor %}
---
{{ content | safe }}
